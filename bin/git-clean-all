#!/usr/bin/env bash

ALWAYS_HARDREMOVE="$1"

eval "$(ssh-agent)"
ssh-add

cd "$REPOSITORY_DIR" || exit
for i in *; do
  if [[ -d "$i" && -d "$i/.git" ]]; then
    (
      nicelog "Cleaning $i..."
      cd "${i}" || exit 1
      git-clean-branch "${ALWAYS_HARDREMOVE}"
      nicelog "Cleaned $i"
    )
  fi
done
